{
  "extends": [
    "eslint:recommended",
    "strongloop"
  ],
  "env": {
    "node": true,
    "es2017": true,
    "browser": false
  },
  "parser": "babel-eslint",
  "ignorePatterns": [
    "test/*.js",
    "**/vendor/*.js"
  ],
  "rules": {
    "max-len": [2, 140, 2],
    "eqeqeq": 2,
    "complexity": [
      "error"
    ],
    "default-param-last": [
      "error"
    ],
    "no-magic-numbers": [
      "error",
      {
        "ignore": [-1, 0, 1],
        "ignoreArrayIndexes": true
      }
    ],
    "arrow-parens": [
      "error",
      "as-needed"
    ]
  }
}